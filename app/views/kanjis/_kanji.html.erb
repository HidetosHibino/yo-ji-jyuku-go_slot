<div class="col-sm-6 col-lg-3 mb-3">
  <div class="basic-yoji<%= kanji.id %>">
    <div class="card card-yoji-wrapper">
      <div class="card-body position-relative">
        <h4 class="card-title mt-sm-1 mt-lg-2 mb-sm-1 mb-lg-2">
          <b><%= kanji.letter %></b>
        </h4>
        <div>
          <% kanji.random_ref_yoji&.each do |yoji| %>
            <div class="m-2">
              <%= yoji.name %>
            </div>
          <% end %>
        </div>
        <div class="menu position-absolute bottom-0">
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= link_to t('defaults.nav_show'), kanji_path(kanji) %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>