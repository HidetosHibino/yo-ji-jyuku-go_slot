      <div class="card-body position-relative">
        <h4 class="card-title mt-sm-1 mt-lg-2 mb-sm-1 mb-lg-2">
          <b><%= kanji.letter %></b>
        </h4>
        <div class="menu position-absolute bottom-0">

          <ul class="list-inline">
            <li class="list-inline-item">
              <%= link_to t('defaults.nav_show'), kanji_path(kanji) %>
              <%# <%= board.user.decorate.full_name %> %>
            </li>
            <li class="list-inline-item">
              <%= icon 'far', 'user' %>
              <%# <%= l board.created_at, format: :long %> %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
