<% content_for(:title, t('.title')) %>
<section class="text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light"><%= t('.title') %></h1>
      <div class="pt-5 row">
        <div class="col-9">
          <%= render 'search_form', url: basic_yojis_path %>
        </div>
        <div class="col-3">
          <%= link_to '新規作成', new_basic_yoji_url, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <div class="row"> 
    <% if @slot_yojis.present? %>
      <%= render @slot_yojis %>
    <% else %>
      <div class="text-center pt-5">
        <%= t('.no_result') %>
      </div>
    <% end%>
  </div>
  <%= paginate @slot_yojis %>
</div>