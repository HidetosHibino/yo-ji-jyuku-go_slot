<div class="card my-3">
  <div class="card-body">
    <div class="h3">
      <%= user_reaction.body %>
    </div>
    <div class="text-end">
      <%= user_reaction.user.name %>
    </div>
  </div>
  <div class="card-footer text-end">
    <% if current_user.own?(user_reaction) %>
      <%= render 'user_reactions/crud_menu', {user_reaction: user_reaction} %>
    <% end %>
  </div>
</div>