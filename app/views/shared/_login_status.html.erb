<% if logged_in? %>
  <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownLoginUserMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    <%= image_tag current_user.avatar_url, class: 'img-circle elevation-2', size:'24x24' %>
  </a>
  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDarkDropdownLoginUserMenuLink">
    <li><%= link_to t('.nav_profile'), profile_path(current_user), class:"dropdown-item"%></li>
    <li><%= link_to t('defaults.logout'), logout_path, class: 'dropdown-item', method: :delete%><li>
  </ul>
<% else %>
  <%= link_to t('defaults.login'), login_path, class: 'nav-link', remote: true %>
<% end %>