<div class="card my-3">
  <div class="card-body">
    <div class="h3">
      <%= sample.body %>
    </div>
    <div class="text-end">
      <%= profile_link(sample.user) %>
    </div>
  </div>
  <div class="card-footer text-end">
    <% if current_user.own?(sample) %>
      <%= render 'samples/crud_menu', {sample: sample} %>
      <% else %>
      <%= render 'bookmarks/bookmark_button', { bookmarkable: sample } %>
    <% end %>
  </div>
</div>