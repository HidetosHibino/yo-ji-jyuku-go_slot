<a class="btn btn-primary my-1" data-bs-toggle="collapse" href="#collapseSampleForm" role="button" aria-expanded="false" aria-controls="collapseExample">
  <%= t('.open_form') %>
</a>
<div class="collapse" id="collapseSampleForm">
  <div class="card card-body">
    <div class="row">
      <%= form_with model: [sampleable, Sample.new] do |f| %>
        <%= f.label t('.body') %>
        <div class="row justify-content-md-center">  
          <div class="col-sm-8 col-md-9 col-lg-10">
            <%= f.text_field :body, class:'form-control', required: true %>
          </div>
          <div class="col-sm-4 col-md-3 col-lg-2">
            <%= f.submit class:"btn btn-primary"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>