<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2 class="mt-4 mb-4"><%= t ('defaults.login') %></h2>
      <%= form_with model: @user, url: login_path, method: :post, remote: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions text-center m-3">
          <%= f.submit t('defaults.login'), class: 'btn btn-primary col-5' %>
          <button type="button" class="btn btn-secondary col-5" data-bs-dismiss="modal"><%= t('defaults.cancel') %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>